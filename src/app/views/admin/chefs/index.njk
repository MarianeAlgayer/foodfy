{% extends 'admin/layout.njk' %}

{% block head %}

    <title>Foodfy | Manage chefs</title>
    <link rel="stylesheet" href="/styles/admin_chefs.css">

{% endblock%}

{% block content %}

    <main id="content">

        <div id="manage-chefs">
            <h2>Manage chefs</h2>
        </div>
        
        <section id="chefs">

            {% for chef in chefs %}
                <div class="chef">
                    <div class="chef-image-container">
                        <img src="{{ chef.avatar_url }}" alt="{{ chef.name }}">
                    </div>
                    <div class="chef-info">
                        <h1 class="chef-name">{{ chef.name }}</h1>
                        <a href="/admin/chefs/{{ chef.id }}">View</a>
                    </div>
                </div>
            {% endfor %}

        </section>
    </main>

{% endblock %}
