<section>
    <div class="item">
        <div>Recipe image (URL)</div>
        <div>
            <input 
                type="url" 
                name="image_url" 
                placeholder="http://"
                value="{{ recipe.image_url }}"
            >
        </div>
    </div>

    <div class="item">
        <div>Title</div>
        <div>
            <input 
                type="text" 
                name="title" 
                value="{{ recipe.title }}"
            >
        </div>
    </div>

    <div class="item">
        <div>Chef</div>
        <div>
            <select name="chef">
                {% for chef in chefOptions %}
                    <option 
                        value="{{ chef.id }}"
                        {% if recipe.chef_id == chef.id %} selected {% endif %}
                    >
                        {{ chef.name }}
                    </option>
                {% endfor %}
            </select>
    </div>

    <div class="item" id="ingredients">
        <div>Ingredients</div>
        <div class="ingredient">
            <input 
                type="text" 
                name="ingredients[]" 
                value=""
            >
        </div>
    </div>
    <button type="button" class="add-ingredient">Add ingredient</button>

    <div class="item" id="preparation">
        <div>Preparation method</div>
        <div class="preparation">
            <input 
                type="text" 
                name="preparation[]" 
                value=""
            >
        </div>
    </div>
    <button type="button" class="add-step">Add step</button>

    <div class="item">
        <div>Additional information</div>
        <div>
            <input
                type="text"
                name="tips"
                value="{{ recipe.tips }}"
            >
        </div>
    </div>
</section>
