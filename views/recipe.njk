{% extends 'layout.njk' %}

{% block head %}

    <title>Foodfy | {{ recipe.title }}</title>
    <link rel="stylesheet" href="/styles/recipe.css">

{% endblock %}

{% block content %}

    <main id="content">
        <div class="recipe">
            <section class="recipe-intro">
                <div class="recipe-image-container">
                    <img src="{{ recipe.image_02 }}" alt="{{ recipe.title }}">
                </div>
                <div class="recipe-info">
                    <h1 class="recipe-name">{{ recipe.title }}</h1>
                    <p class="chef">by {{ recipe.author }}</p>
                </div>
            </section>
            <section class="recipe-ingredients">
                <h2>Ingredients</h2>
                <div class="toggle">
                    <input id="switch-ingredients" class="switch" type="checkbox" checked>
                    <label for="switch-ingredients" class="label-switch">
                        <div class="ball"></div>
                    </label>
                </div>
                <ul type="disc">
                {% for ingredient in recipe.ingredients %}
                    <li>{{ ingredient }};</li>
                {% endfor %}
                </ul>
            </section>
            <section class="recipe-preparation">
                <h2>Preparation Method</h2>
                <div class="toggle">
                    <input id="switch-preparation" class="switch" type="checkbox" checked>
                    <label for="switch-preparation" class="label-switch">
                        <div class="ball"></div>
                    </label>
                </div>
                <ol>
                {% for direction in recipe.preparation %}
                    <li>{{ direction }}</li>
                {% endfor %}
                </ol>
            </section>
            <section class="recipe-tips">
                <h2>Recipe Tips</h2>
                <div class="toggle">
                    <input id="switch-tips" class="switch" type="checkbox" checked>
                    <label for="switch-tips" class="label-switch">
                        <div class="ball"></div>
                    </label>
                </div>
                <p>{{ recipe.tips}}</p>
            </section>
        </div>
    </main>
    
    <script src="/scripts/recipe.js"></script>

{% endblock %}