{% extends 'admin/layout.njk' %}

{% block head %}

    <title>Foodfy | Details {{ recipe.title }}</title>
    <link rel="stylesheet" href="/styles/admin_details.css">

{% endblock %}

{% block content %}

    <main id="content">

        <div class="title">
            <h2>Recipe: {{ recipe.title }}</h2>
            <a href="/admin/recipes/{{ recipe.id }}/edit">Edit recipe</a>
        </div>

        <div class="recipe">
            <section class="recipe-intro">
                <div class="recipe-image-intro">
                    <img src="{{ recipe.image_url }}" alt="{{ recipe.title }}">
                </div>
                <div class="recipe-details">
                    <h1 class="recipe-name">{{ recipe.title }}</h1>
                    <p class="chef">by {{ recipe.author }}</p>
                </div>
            </section>
            <section class="recipe-ingredients">
                <h2>Ingredients</h2>
                <ul type="disc">
                {% for ingredient in recipe.ingredients %}
                    <li>{{ ingredient }};</li>
                {% endfor %}
                </ul>
            </section>
            <section class="recipe-preparation">
                <h2>Preparation Method</h2>
                <ol>
                {% for direction in recipe.preparation %}
                    <li>{{ direction }}</li>
                {% endfor %}
                </ol>
            </section>
            <section class="recipe-tips">
                <h2>Recipe Tips</h2>
                <p>{{ recipe.tips}}</p>
            </section>
        </div>
    </main>

{% endblock %}