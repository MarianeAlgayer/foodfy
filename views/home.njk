{% extends 'layout.njk' %}

{% block head %}

    <title>Foodfy | Home</title>
    <link rel="stylesheet" href="/styles/home.css">
    <link rel="stylesheet" href="/styles/recipes.css">

{% endblock %}

{% block content %}

    <main id="content">
        <section id="intro">
            <hgroup>
                <h1>The best recipes</h1>
                <h2>Learn how to make the best dishes with recipes created by professionals from all over the world.</h2>
            </hgroup>
        </section>

        <div id="pop-recipes">
            <h2>Popular recipes</h2>
        </div>
        
        <section id="recipes">

            {% for recipe in recipes %}
                <div class="recipe">
                    <div class="recipe-image-container">
                        <img src="{{ recipe.image_01 }}" alt="{{ recipe.title }}">
                    </div>
                    <div class="recipe-info">
                        <h1 class="recipe-name">{{ recipe.title }}</h1>
                        <p class="chef">by {{ recipe.author }}</p>
                    </div>
                </div>
            {% endfor %}

        </section>
    </main>

    <script src="/scripts/recipes.js"></script>

{% endblock %}

</html>